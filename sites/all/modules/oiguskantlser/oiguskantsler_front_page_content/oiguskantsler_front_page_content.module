function oiguskantsler_seisukohad(){
     global $language;
    $query = db_select('node','n')
     ->condition('n.type','seisukoht')
     ->condition('n.language',$language->language)
     ->orderBy('created', 'DESC')//ORDER BY created
     ->fields('n')
     ->range(0,5);
     
    
 $result = $query->execute();
 $output='';
 $number_of_news=5;
 $type=1;
 
 while($record = $result->fetchAssoc()) {
     
   $node=node_load($record['nid']);     
   $opinion_link=file_create_url($node->field_document['und'][0]['uri']);

   $date=date("d.m.Y", $node->created);
   
   
   $output.='  
                    <article>
                        
                        <a href="'.$opinion_link.'"><h2>'.$node->title.'</h2></a><span class="date">'.$date.'</span>
                        
                        <div class="news_content">
                        ';
                        if(!empty($node->body)):
                        $output.='<p class="front_content_seisukoht">'.$node->body[$language->language][0]['value'].'</p>';    
                        endif;    
                        $output.='
                          </div>'.'<a href="'.$opinion_link.'" class="btn btn-text-link">'.t('Read more').' »</a>
                        
                    </article>
                    
                    ';
 }
   $output.='<div id="ajax-target"></div>';
    
                
    $output.='     <button id="load_more_s" loaded_value="5" onclick="load_more_s('.$number_of_news.','.$type.','.'\''.$language->language.'\''.')" class="btn btn-primary">'.t('Load more').'</button> <a href="'.$language->language.'/seisukohad" class="btn btn-link">'.t('Opinions archive').'</a>';
return $output;
}

function oiguskantsler_front_page_content_load_more() {
  // The function will receive the array of arguments after the "get/ajax" prefix
  $number_of_news = implode('/', func_get_args());
  $filters =  explode('/', $number_of_news);
  
  
  $existing_number = $filters[0];
  
  $type=$filters[1];
  $language=$filters[2];
  
  if($type==1):
    $tyyp='seisukoht';
  
  elseif($type==2):
      $tyyp='uudis';
  endif;      
  
   $nodes_to_send=array(); 
 $query = db_select('node','n')
     ->condition('n.type',$tyyp)
     ->condition('n.language',$language)
     ->orderBy('created', 'DESC')//ORDER BY created
     ->fields('n')
     ->range($existing_number,5);
     
    
 $result = $query->execute();
       $output='';
  while($record = $result->fetchAssoc()) {
      $node= node_load($record['nid']);
      if($tyyp=='seisukoht'){
          $opinion_link=file_create_url($node->field_document['und'][0]['uri']);
      }
      $date=date('d.m.Y',$node->created);
      $output.='  
                    <article>
                        ';
                        if($tyyp=='seisukoht'){
                        $output.='<a href="'.$opinion_link.'"><h2>'.$node->title.'</h2><span class="date">'.$date.'</span>';
                        }
                        else{
                            $output.='<h2>'.$node->title.'</h2><span class="date">'.$date.'</span>';
                        }
                        $output.='
                        <div class="news_content">
                        ';
                        
                        if(!empty($node->body)):
                        $output.='<p class="front_content_seisukoht">'.$node->body[$language][0]['value'].'</p>';    
                        endif;    
                        $output.='</div>';
                        if($tyyp=='seisukoht'){
                            $output.='<a href="'.$opinion_link.'">'.t('Read more').'</a>';
                        }
                        else{
                            $output.='<a href="'.url('node/'.$node->nid).'">'.t('Read more').'</a>';
                        }
                        $output.='
                    </article>
                    
                    ';
      
  }
  
  
  
  return $output;
}

