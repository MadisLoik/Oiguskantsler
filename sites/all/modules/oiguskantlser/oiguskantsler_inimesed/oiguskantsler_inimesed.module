function oiguskantsler_inimesed_block_view($delta = '') {
    $block = array();
    switch ($delta) {
        case 'oiguskantsler_tabel':
            $block['subject'] = '<none>';
            $block['content'] = array(
                '#type' => 'item',
                '#title' => t('Footer'),
                '#markup' => oiguskantsler_inimesed(),
            );
            
            
            
            break;
   
    }
    
    
    
    return $block;
}
